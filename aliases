# Unix
alias python='python3'
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias rdbm="rake db:migrate"
alias rdbc="rake db:create"
alias rdbd="rake db:drop"
alias rdbr="rake db:rollback"
alias rdbs="rake db:seed"
alias rr="rake routes"
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias rspec="LOG_LEVEL=2 rspec"
alias rs='spring stop && rails s'
alias rc='rails c'
alias cl='clear'
alias yt='yarn start'
alias mux='tmuxinator'
alias vim='nvim'
alias vi='nvim'
alias python='python3'
alias yyt='yarn && yarn start'
alias yt='yarn start'
alias ya='yarn flow && yarn lint && yarn testdev'
alias rspec='bundle exec rspec'
alias load='source ~/.zshrc'
# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
alias kpsql="kill -9 $(cat /usr/local/var/postgres/postmaster.pid | awk 'NR == 1')"

# deployment
alias here='ehcli'
alias herostag='ehcli --context=$STAG'
alias heroprod='ehcli --context=$PROD'

#Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

