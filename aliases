# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"
alias rs='rails s'
alias rc='rails c'
alias cl='clear'
alias yt='yarn start'
alias mux='tmuxinator'
alias vim='nvim'
alias vi='nvim'
alias python='python3'
alias yyt='yarn && yarn start'
alias yt='yarn start'
alias ya='yarn flow && yarn lint && yarn testdev'
alias rspec='bundle exec rspec'
# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
alias kpsql="kill -9 $(cat /usr/local/var/postgres/postmaster.pid | awk 'NR == 1')"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# For Vim 7.4
#alias vim='/usr/local/Cellar/vim/7.4.2290/bin/vim

